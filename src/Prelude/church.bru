-- some numbers
zero  := λλ0 :: 0
one   := succ{zero }
two   := succ{one  }
three := succ{two  }
four  := succ{three}
five  := succ{four }
six   := succ{five }
seven := succ{six  }
eight := succ{seven}
nine  := succ{eight}
ten   := succ{nine }

exp2  := λ exp{two, 0}  
n16   := exp2{four }
n32   := exp2{five }
n64   := exp2{six  }
n128  := exp2{seven}
n256  := exp2{eight}
n512  := exp2{nine }
n1024 := exp2{ten  }

-- synonyms
++  := succ :: 1
+   := add  :: 2
*   := mul  :: 2
^   := exp  :: 2
n0  := zero
n1  := one
n2  := two
n3  := three
n4  := four
n5  := five
n6  := six
n7  := seven
n8  := eight
n9  := nine
n10 := ten

-- formatting function
-- prints the church encoded numeral as stars
formatChurch := λ (0 UNL{.*} λ0) :: 1
formatDots   := λ (0 UNL{..} λ0) :: 1
