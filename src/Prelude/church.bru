--!-- church numerals

{! import list !}

-- the successor function, ++
succ := λλλ (1 (2 1 0)) :: 1

-- the pred functions, --
predF   := λ (pair (snd 0) (succ (snd 0)))
predPc0 := (pair (λλ0) (λλ0)) :: 1
pred    := λ (fst (0 predF predPc0))

-- basic arithmetic functions
add  := λλ  (0 succ 1)
mul  := λλλ (2 (1 0)) :: 2
exp  := λλ  (0 1)
sub  := λλ  (0 pred 1)

